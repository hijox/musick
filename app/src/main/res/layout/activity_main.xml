<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/spotify_black"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showHideInputButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hide_playlist_input"
        android:textColor="@color/white"
        android:backgroundTint="@color/spotify_green"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/playlistLinkInput"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/gray"
        android:hint="@string/enter_spotify_playlist_link"
        android:textColor="@color/white"
        app:hintTextColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showHideInputButton" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:textColor="@color/white"
        android:backgroundTint="@color/spotify_green"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/playlistLinkInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startGameButton">

        <Button
            android:id="@+id/playPauseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/spotify_green"
            android:text="@string/play_pause"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/skipButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/spotify_green"
            android:text="@string/next"
            android:textColor="@color/white" />
    </LinearLayout>


    <Button
        android:id="@+id/buzzerButton"
        android:layout_width="352dp"
        android:layout_height="348dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/round_button"
        android:text="@string/buzzer"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <Button
        android:id="@+id/revealButton"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/spotify_green"
        android:text="@string/reveal_song_info"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buzzerButton" />

    <TextView
        android:id="@+id/songInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/revealButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
